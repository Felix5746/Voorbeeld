@page "/movies"
<h3>Movies</h3>
<p>@Message</p>
<div class="row">
    <div class="col-md-12">
        <h1>Films zoeken (OMDB API)</h1>
		<form id="searchForm" class="form-inline" @onsubmit="GetData">
            <div class="form-group m-2">
                <label for="zoekterm">Zoekterm</label>
                <input type="text"
                       class="form-control mx-2"
                       id="zoekterm"
                       name="zoekterm" 
                       @bind="Search"/>
            </div>
            <button type="submit" id="buttonZoeken"  class="btn btn-primary m-2">
                Zoeken
            </button>
        </form>
    </div>
</div>

<div class="row m-2">
    <div class="col-md-12">
        @if(!string.IsNullOrWhiteSpace(Message)){
        <div class="row p-2 alert-success" id="divMsg">@Message</div>
        }
        <div class="row p-3" id="divResult">
            
            @if(Response != null)
            {
                @for (var i = 1; i <= Response.Search.Count; i++)
                {
                    <div class="col-md-4 col-sm-6">
                        <div class="card mb-3 shadow-sm">
                            <img src="@Response.Search[i-1].Poster" class="img-responsive">
                            <div class="card-body">
                                <p class="card-text">@Response.Search[i-1].Title</p>
                                <div class="d-flex justify-content-between align-items-center">

                                    <small class="text-muted">@Response.Search[i-1].Year</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
           
        </div>
    </div>
</div>